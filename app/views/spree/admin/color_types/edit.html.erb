<%= render :partial => 'spree/admin/shared/product_sub_menu' %>

<% content_for :page_title do %>
  <%= Spree.t(:editing_color_type) %> <span class="green">"<%= @color_type.name %>"</span>
<% end %>

<% content_for :page_actions do %>
  <li>
    <span id="new_add_color_value" data-hook>
      <%= link_to_add_fields Spree.t(:add_color_value), "tbody#color_values", :class => 'button fa fa-plus' %>
    </span>
  </li>
  <li>
    <%= button_link_to Spree.t(:back_to_color_types_list), spree.admin_color_types_path, :icon => 'arrow-left' %>
  </li>
<% end %>

<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @color_type } %>

<%= form_for [:admin, @color_type] do |f| %>
  <fieldset>
    <legend align="center"><%= Spree.t(:color_values) %></legend>

    <%= render :partial => 'form', :locals => { :f => f } %>

    <table class="index sortable" data-hook data-sortable-link="<%= update_values_positions_admin_color_types_url %>">
      <thead data-hook="option_header">
        <tr>
          <th colspan="2"><%= Spree.t(:name) %></th>
          <th><%= Spree.t(:display) %></th>
          <th><%= Spree.t(:description) %></th>
          <th><%= Spree.t(:price) %></th>
          <th><%= Spree.t(:image) %></th>
          <th class="actions"></th>
        </tr>
      </thead>
      <tbody id="color_values">
        <% if @color_type.color_values.empty? %>
          <tr id="none" data-hook="option_none" class="<%= cycle('odd', 'even')%>">
            <td colspan="2"><%= Spree.t(:none) %></td>
            <td class="actions"></td>
          </tr>
        <% else %>
          <%= f.fields_for :color_values do |color_value_form| %>
            <%= render :partial => 'color_value_fields', :locals => { :f => color_value_form } %>
          <% end %>
        <% end %>
      </tbody>
    </table>

    <%= render :partial => 'spree/admin/shared/edit_resource_links' %>
  </fieldset>
<% end %>