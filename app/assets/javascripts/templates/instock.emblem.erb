each collection in instock_collections
  div.stock-row
    div.col-main-body.stock-section
      h3 {{collection.name}} in stock
      each item in collection.items
        link-to 'instockitem' item tagName='div' classNames='col-sm-4 stock-tile'
          div.tile-img
            img.img-responsive{bind-attr src='item.catalogue_image'}  alt="loading..."
          div.tile-info
            h4 {{item.name}}
            p {{item.instock_description}}
            div.stock-price
              span.price {{item.display_price}}
              button.btn.btn-black add to cart

div.stock-row
  div.col-main-body.stock-section
    div.pages
      span viewing 1 to 6
      span.gray 6 total
    div.stock-link
      span
        |That's what we have in stock. visit the
        button.btn.btn-black custom shop
        | for more options
