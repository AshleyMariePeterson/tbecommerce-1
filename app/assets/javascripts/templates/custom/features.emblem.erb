div.col-main-body
  div.col-sm-5
    div.col-sm-11.no-padding
      div.custom-features
        each option in options
          div.custom-features-line
            span.name {{option.name}}
            input.right type='checkbox'
            span.price.right ${{option.price}}
            span.icon-info.right
      div.custom-selection-field
        div.selection-fields
          textarea placeholder='Notes...'

    div.col-sm-11.custom-field-footer
      div.footer-info
        span.capitalize dumpster
        span.price $185
      button.btn.btn-black add to cart & see extras    >

  div.col-sm-7.centered
    div.col-sm-12
      partial 'custom-item'

partial 'custom/description'