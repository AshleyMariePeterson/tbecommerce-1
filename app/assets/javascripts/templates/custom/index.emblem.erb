div.col-main-body
  div.col-sm-5
    each categories
      toggle-menu classNames='col-sm-11 custom-field-section'
        div.custom-selection-header
          span.custom-selection-title {{name}}
          span.toggle-menu-icon.right
        div.section-content
          each types
            div.custom-selection-field
              div.selection-category
                span.category-title {{name}}
                each items
                  div.selection-option click='setCustomProduct this'
                    span {{name}}
  div.col-sm-7.centered
    render 'custom-item' model
