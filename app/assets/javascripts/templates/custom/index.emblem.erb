div.col-main-body
  div.col-sm-5
    each categories
      div.col-sm-11.custom-field-section
        toggle-menu classNames='custom-selection-header'
          span.custom-selection-title {{name}}
          span.toggle-menu-icon.right
        div.section-content
          each types
            div.custom-selection-field
              div.selection-category
                span.category-title {{name}}
                each items
                  div.selection-option click="setCustomProduct this bubbles=false"
                    span {{name}}
  div.col-sm-7.centered
    div.col-sm-12
      partial 'custom-item'
