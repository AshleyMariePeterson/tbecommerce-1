div.col-main-body
  div.col-sm-5
    div.col-sm-11.no-padding
      div.custom-features
        each option in options
          div.custom-features-line
            span.name.interactable click='clickOption option' {{option.name}}
            =input class='right' type='checkbox' checked=option.selected
            span.price.right ${{option.price}}
            span.icon-info.right.interactable click="openModal 'property' option"
      div.custom-selection-field
        div.selection-fields
          textarea placeholder='Notes...'

    div.col-sm-11.custom-field-footer
      div.footer-info
        span.capitalize {{name}}
        span.price ${{price}}
      button.btn.btn-black click="addToCart model" add to cart & see extras    >

  div.col-sm-7.centered
    render 'custom-item' model

partial 'custom/description'