<div class="catalogue-row">
  <div class="col-main-body catalogue-section-title">
    <h3 class="upcase">
      {{category}}
    </h3>
  </div>
</div>
{{#each types}}
  <div class="catalogue-row">
    <div class="col-main-body">
      <div class="catalogue-section-title">
        <span class="upcase">
          {{name}}
        </span>
      </div>
      <div class="catalogue-tiles col-sm-12 no-padding">
        {{#each items}}
          {{#link-to "product" this tagName="div" classNames="item-tile col-sm-3"}}
            <img {{bind-attr src="catalogue_image"}} alt="loading..." class="img-responsive" />
            <h3 class="capitalize">
              {{name}}
            </h3>
            <span class="price">
              $
              {{price}}
            </span>
            <span class="gray capitalize">
              {{tagline}}
            </span>
          {{/link-to}}
        {{/each}}
      </div>
    </div>
  </div>
{{/each}}